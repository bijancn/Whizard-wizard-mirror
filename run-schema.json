{
  "$schema": "json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "scan": {
      "type": "object",
      "properties": {
        "scan_object": { "type": "string" },
        "ranges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "start": { "type": "number" },
              "stop": { "type": "number" },
              "stepsize": { "type": "number" },
              "steps": { "type": "number" },
              "type": {
                "type": "string",
                "enum": ["logarithmic", "logarithmic2", "linear", "explicit"]
              },
              "range": {
                "type": "array",
                "items": { "type": "number" }
              }
            }
          }
        }
      }
    },
    "run": {
      "type": "object",
      "properties": {
        "process": {
          "type": "array",
          "description": "apply run options of this entry to all processes in this array"
        },
        "purpose": {
          "type": "string",
          "enum": ["scan", "integration", "histograms", "events", "test_soft"],
          "description": "What to do. In the future, the purpose should be an object containing also the corresponding options"
        },
        "nlo_type": {
          "type": "string",
          "enum": ["lo", "nlo", "nlo_combined"]
        },
        "fks_method": {
          "type": "string",
          "enum": ["default", "resonances"]
        },
        "beam_type": {
          "type": "string",
          "enum": ["leptons", "hadrons"]
        },
        "batch_start": { "type": "number" },
        "batches": { "type": "number" },
        "events_per_batches": { "type": "number" },
        "scans": {
          "type": "array",
          "items": { "$ref": "#/definitions/scan" }
        },
        "adaption_iterations": { "type": "string" },
        "integration_iterations": { "type": "string" },
        "scale_variation": { "type": "boolean" },
        "only_sindarins": { "type": "boolean" },
        "event_mult_real": { "type": "number" }
      },
      "required": [
        "process",
        "purpose",
        "nlo_type"
      ]
    }
  },
  "properties": {
    "processes": {
      "type": "array",
      "description": "`runs` would be a more appropriate name",
      "items": { "$ref": "#/definitions/run" },
      "required": [ "1" ]
    },
    "whizard": { "type": "string" },
    "data_output": {
      "type": "string",
      "description": "Not supported"
    }
  },
  "required": [
    "processes"
  ]
}
