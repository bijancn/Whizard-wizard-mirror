{
  "$schema": "json-schema.org/draft-04/schema#",
  "id": "run-schema",
  "type": "object",
  "properties": {
    "processes": {
      "id": "processes",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "process": {
            "id": "processes/process",
            "type": "array"
          },
          "purpose": {
            "id": "processes/purpose",
            "type": "string",
            "enum": ["scan", "integration", "histograms", "events",
                     "test_soft"]
          },
          "nlo_type": {
             "id": "processes/nlo_type",
             "type": "string",
             "enum": ["lo", "nlo", "nlo_combined"]
          },
          "fks_method": {
             "id": "processes/fks_method",
             "type": "string",
             "enum": ["default", "resonances"]
          },
          "beam_type": {
             "id" : "processes/beam_type",
             "type": "string",
             "enum": ["leptons", "hadrons"]
          },
          "batches": {
            "id": "processes/batches",
            "type": "number"
          },
          "events_per_batches": {
            "id": "processes/batches",
            "type": "number"
          },
          "scan_object": {
            "id": "processes/scan_object",
            "type": "string"
          },
          "start": {
            "id": "processes/start",
            "type": "number"
          },
          "stop": {
            "id": "processes/stop",
            "type": "number"
          },
          "stepsize": {
            "id": "processes/stepsize",
            "type": "string"
          },
          "adaption_iterations": {
            "id": "processes/adaption_iterations",
            "type": "string"
          },
          "integration_iterations": {
            "id": "processes/integration_iterations",
            "type": "string"
          },
          "scale_variation": {
             "id": "processes/scale_variation",
             "type": "boolean"
          },
          "only_sindarins": {
             "id": "processes/only_sindarins",
             "type": "boolean"
          },
          "event_mult_real": {
             "id": "processes/event_mult_real",
             "type": "number"
          }
        },
        "required": [
          "process",
          "purpose",
          "nlo_type"
        ]
      },
      "required": [
        "1"
      ]
    },
    "whizard": {
      "id": "whizard",
      "type": "string"
    },
    "data_output": {
      "id": "data_output",
      "type": "string"
    }
  },
  "required": [
    "processes"
  ]
}
