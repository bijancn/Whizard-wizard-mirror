model = SM

seed = 42

?combined_nlo_integration = false
$loop_me_method = "openloops"
alpha_power = 4
alphas_power = 0
?use_vamp_equivalences = false

process ttbar = e1, E1 => Wp, Wm, b, B
!process ttbar = e1, E1 => Wp, Wm, b, B { $restrictions = "3+5~t && 4+6~tbar" }
process ttbar_NLO = e1, E1 => Wp, Wm, b, B {nlo_calculation="Full"}

compile

mZ = 91.188
mW = 80.419
mb = 4.2
mH =  1.250000000000E+02
me =  0.0
wZ =  2.443
wW =  2.049000000000E+00
wH =  4.143000000000E-03
alphas = 0.118 ! (Z pole, NLL running to mu_h)
!alpha_em_i =  1.259307555060E+02
mtop = 172.0
GF = 1.2273E-005
!ee =  3.158922910135E-01
!cw =  8.819033206124E-01
!sw =  4.714303056581E-01
!v =  2.400308891938E+02

wtop = 1.54

!printf "mtpole = %g" (mtpole)
printf "wtop   = %g" (wtop)
printf "ee   = %g" (ee)
printf "cw   = %g" (cw)
printf "sw   = %g" (sw)
printf "v   = %g" (v)

!nloop  = 0    # LL
!sh     = 1.
!sf     = 1.
!Vtb    = 1.
!FF     = 1 # NRQCD resummed

!cuts = all abs (M-mtpole) < 10 GeV [Wp,b]
   !and all abs (M-mtpole) < 10 GeV [Wm,B]

plot lineshape_1 { x_min = 339 GeV  x_max = 400 GeV }
plot lineshape_2 { x_min = 339 GeV  x_max = 400 GeV }

sqrts = 340.
printf ">>>> SQRTS   = %g" (sqrts)
integrate (ttbar) { iterations = 8:20000:"gw", 3:50000 }
integrate (ttbar_NLO) { iterations = 6:20000:"gw", 4:50000 }
record lineshape_1 (sqrts, integral(ttbar), error(ttbar))
printf "RES_LO %g %g %g" (sqrts, integral(ttbar), error(ttbar))
record lineshape_2 (sqrts, integral(ttbar_NLO), error(ttbar_NLO))
printf "RES_NLO %g %g %g" (sqrts, integral(ttbar_NLO), error(ttbar_NLO))

compile_analysis { $out_file = "result.dat" }
