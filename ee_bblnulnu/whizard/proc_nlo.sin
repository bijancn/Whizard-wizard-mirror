include("../../general_settings.sin")
include("../process_settings.sin")

?unweighted = false
?nlo_fixed_order = true
?combined_nlo_integration = true
$loop_me_method = "openloops"

fks_dij_exp1 = 1.0
$fks_mapping_type = "resonances"

process proc_nlo = E1, e1 => b, B, e1, N1, E2, n2 {nlo_calculation="Full"}

#NLO Top width
wtop = 1.3376

iterations = 10:200000:"gw", 7:180000
cuts = all abs (M) > 20 GeV [incoming e1, e1]

n_events = 25000 * K
checkpoint = n_events / 20

simulate (proc_nlo)
